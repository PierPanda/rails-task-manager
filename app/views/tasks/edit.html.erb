<div class="container m-5 d-flex row justify-content align-items-center">
  <div class="text-center">

    <h2 class="text-center m-5">Update your task :</h2>

    <div class=" m-3 d-flex justify-content align-items-center">

      <div class=" mx-auto text-center">
        <%= form_with model: @task do |f|  %>
        <div class="form-group mt-3">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group mt-3">
          <%= f.label :details %>
          <%= f.text_field :details, class: 'form-control' %>
        </div>

        <div class="form-group mt-3">
          <%= f.label :completed %>
          <%= f.check_box :completed %>
        </div>

        <div class="form-group mt-3">

          <%= f.submit class: "btn btn-primary mt-3 text-white" %>
          <% end %>

          <button class="form-group btn btn-primary mt-3 text-white">
            Tasks List<%= link_to "", "/tasks" %>
          </button>
        </div>

    </div>

  </div>

</div>
