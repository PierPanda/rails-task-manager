<div class="container m-5 d-flex row justify-content align-items-center">

  <div class="text-center">

    <h1 class="text-center m-5">Tasks List : </h1>

    <div class=" m-3 text-center">
      <ul class="list-unstyled ">
        <% @tasks.each do |task| %>
        <div class="m-3">
          <li>
            <% if task.completed %>
              <i class="fa-regular fa-square-check"></i>
            <% else %>
              <i class="fa-regular fa-square"></i>
            <% end %>

            <%= link_to task.name, task_path(task), class:"text-decoration-none text-black" %>
            <%= link_to task_path(task), data: {turbo_method: :delete, turbo_confirm: 'Are you sure brooo ??'} do %>
              <i class="fa-solid fa-trash-can"></i>
            <% end %>
          </li>
        </div>
        <% end %>
      </ul>
    </div>

    <div>
      <%= link_to "Add a task", new_task_path, class:"btn btn-primary" %>
    </div>

  </div>

</div>
